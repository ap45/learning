#!/bin/bash

# Read the baseFilename from the first line
read -r baseFilename

# Create output filenames
c_output="c_${baseFilename}"
cpp_output="cpp_${baseFilename}"
cs_output="cs_${baseFilename}"

# Loop through each line in the input file
while IFS= read -r line; do
    # Extract the extension
    extension="${line##*.}"

    # Determine the appropriate output file and append the line
    case "$extension" in
        "c")
            echo "$line" >> "$c_output"
            ;;
        "cpp")
            echo "$line" >> "$cpp_output"
            ;;
        "cs")
            echo "$line" >> "$cs_output"
            ;;
        *)
            # Handle unrecognized extensions (optional)
            ;;
    esac
done < "$baseFilename"




#!/bin/bash

# Read the baseFilename from the first line
read -r baseFilename

# Create output filenames
c_output="c_${baseFilename}"
cpp_output="cpp_${baseFilename}"
cs_output="cs_${baseFilename}"

# Ensure output files are created, even if empty
touch "$c_output" "$cpp_output" "$cs_output"

# Loop through each line in the input file
while IFS= read -r line || [[ -n "$line" ]]; do
    # Trim leading and trailing whitespaces
    line="$(echo "$line" | xargs)"

    # Extract the extension
    extension="${line##*.}"

    # Determine the appropriate output file and append the line
    case "$extension" in
        "c")
            echo "$line" >> "$c_output"
            ;;
        "cpp")
            echo "$line" >> "$cpp_output"
            ;;
        "cs")
            echo "$line" >> "$cs_output"
            ;;
        *)
            # Handle unrecognized extensions (optional)
            ;;
    esac
done < "$baseFilename"


#!/bin/bash

# Read the baseFilename from the first line
read -r baseFilename

# Create output filenames
c_output="c_${baseFilename}"
cpp_output="cpp_${baseFilename}"
cs_output="cs_${baseFilename}"

# Ensure output files are created, even if empty
:> "$c_output"
:> "$cpp_output"
:> "$cs_output"

# Loop through each line in the input file
while IFS= read -r line || [[ -n "$line" ]]; do
    # Trim leading and trailing whitespaces
    line="${line#"${line%%[![:space:]]*}"}"
    line="${line%"${line##*[![:space:]]}"}"

    # Extract the extension
    extension="${line##*.}"

    # Determine the appropriate output file and append the line
    case "$extension" in
        "c")
            echo "$line" >> "$c_output"
            ;;
        "cpp")
            echo "$line" >> "$cpp_output"
            ;;
        "cs")
            echo "$line" >> "$cs_output"
            ;;
        *)
            # Handle unrecognized extensions (optional)
            ;;
    esac
done < "$baseFilename"
